{
    "manifest_version": 3,
    "name": "SwiftPeek",
    "version": "1.0",
    "description": "Shift + 左クリックでリンクのプレビューを表示する拡張機能",
    "permissions": ["activeTab"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}